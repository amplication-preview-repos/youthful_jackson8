datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Property {
  id           String              @id @default(cuid())
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  price        Float?
  status       EnumPropertyStatus?
  address      String?
  description  String?
  agent        Agent?              @relation(fields: [agentId], references: [id])
  agentId      String?
  appointments Appointment[]
}

model Client {
  id                   String                           @id @default(cuid())
  createdAt            DateTime                         @default(now())
  updatedAt            DateTime                         @updatedAt
  interestedProperties EnumClientInterestedProperties[]
  name                 String?
  email                String?
  phone                String?
  appointments         Appointment[]
}

model Agent {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  properties   Property[]
  appointments Appointment[]
  name         String?
  email        String?
  phone        String?
}

model Appointment {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  date       DateTime?
  client     Client?   @relation(fields: [clientId], references: [id])
  clientId   String?
  property   Property? @relation(fields: [propertyId], references: [id])
  propertyId String?
  agent      Agent?    @relation(fields: [agentId], references: [id])
  agentId    String?
}

enum EnumPropertyStatus {
  Option1
}

enum EnumClientInterestedProperties {
  Option1
}
